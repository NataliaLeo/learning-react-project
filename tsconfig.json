{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2020",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"./config/**/*.ts",
		"./config/**/*.tsx",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		".eslintrc.js",
		"./*.ts"
	]
}
